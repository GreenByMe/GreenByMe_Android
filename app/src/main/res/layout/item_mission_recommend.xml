<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="24dp"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@color/colorPrimary">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/img_mission_recommend_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:background="@color/tran_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:includeFontPadding="false"
            android:id="@+id/tv_mission_recommend_day_count"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:background="@color/orange"
            android:gravity="center"
            android:text="NEW!"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_mission_progress_user_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_mission_recommend_day_count"
            android:layout_alignBottom="@+id/tv_mission_recommend_day_count"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/tv_mission_recommend_day_count"
            android:gravity="center"
            android:text="Sponser"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_mission_recommend_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="한달동안 텀블러 들고다니기"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:maxLines="2"
            android:id="@+id/tv_mission_recommend_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mission_recommend_contents"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="일회용 컵 대신 텀블러를 사용해 보세요. \n아껴진 탄소발자국의 양만큼 나무를 심어드려요!"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_mission_recommend_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_round_button_gray"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="8/10 ~ 8/20"
            android:textColor="@color/white" />

        <TextView
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_mission_recommend_user_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_mission_recommend_date"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_round_button_gray"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="0명 참여중"
            android:textColor="@color/white" />
    </RelativeLayout>
</FrameLayout>