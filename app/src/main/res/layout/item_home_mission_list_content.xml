<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/iv_home_mission_image"
        android:layout_width="0dp"
        android:layout_height="97dp"
        android:adjustViewBounds="true"
        android:background="@color/whiteGray"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_home_tag"
        android:layout_width="43dp"
        android:layout_height="18dp"
        android:background="#FE9776"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/tv_home_mission_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="left"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_home_mission_image"
        tools:text="오늘 하루 채식하기" />

    <TextView
        android:id="@+id/tv_home_mission_date"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_round_button_gray"
        android:includeFontPadding="false"
        android:paddingLeft="8dp"
        android:paddingTop="-6dp"
        android:paddingRight="8dp"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_home_mission_name"
        tools:ignore="SmallSp"
        tools:text="7/13" />

    <TextView
        android:id="@+id/tv_home_nums"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_home_mission_date"
        app:layout_constraintLeft_toRightOf="@+id/tv_home_mission_date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_home_mission_date"
        tools:ignore="SmallSp"
        tools:text="300명 도전중" />

    <ImageView
        android:id="@+id/img_home_mission_ended_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@color/tran_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_home_mission_ended_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_mission_ended_text"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>