<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_mission_detail_certification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증하는 방법"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mission_detail_certification_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="자전거를 잡거나 자전거 앞에서 손이 나오는 사진 등 자전거와 함께 자유롭게 사진을 찍어주세요!"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_mission_detail_certification_title" />

    <TextView
        android:id="@+id/tv_mission_detail_certification_day_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="인증 가능 요일"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_mission_detail_certification_contents" />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/tv_mission_detail_certification_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="월 - 금"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_mission_detail_certification_day_title"
        app:layout_constraintStart_toEndOf="@+id/tv_mission_detail_certification_day_title"
        app:layout_constraintTop_toTopOf="@+id/tv_mission_detail_certification_day_title" />

    <TextView
        android:id="@+id/tv_mission_detail_certification_frequency_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="인증 주기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/tv_mission_detail_certification_day_title"
        app:layout_constraintTop_toBottomOf="@id/tv_mission_detail_certification_contents" />

    <TextView
        android:id="@+id/tv_mission_detail_certification_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주 3회 이상"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/tv_mission_detail_certification_day_title"
        app:layout_constraintStart_toStartOf="@+id/tv_mission_detail_certification_photo"
        app:layout_constraintTop_toTopOf="@+id/tv_mission_detail_certification_frequency_title" />

    <TextView
        android:id="@+id/tv_mission_detail_certification_count_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="하루 인증 횟수"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_mission_detail_certification_day_title" />

    <TextView
        android:id="@+id/tv_mission_detail_certification_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="무제한"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/tv_mission_detail_certification_day"
        app:layout_constraintLeft_toRightOf="@+id/tv_mission_detail_certification_day_title"
        app:layout_constraintStart_toStartOf="@+id/tv_mission_detail_certification_day"
        app:layout_constraintTop_toTopOf="@+id/tv_mission_detail_certification_count_title" />

    <TextView
        android:id="@+id/tv_mission_detail_certification_photo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="사진첩 사용"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_mission_detail_certification_frequency_title"
        app:layout_constraintTop_toBottomOf="@id/tv_mission_detail_certification_frequency_title" />

    <TextView
        android:id="@+id/tv_mission_detail_certification_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="불가능"
        android:textColor="@color/black"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toEndOf="@+id/tv_mission_detail_certification_photo_title"
        app:layout_constraintTop_toTopOf="@+id/tv_mission_detail_certification_photo_title" />

    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/tv_mission_detail_certification_open_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증샷 공개"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mission_detail_certification_count_title" />

    <TextView
        android:id="@+id/tv_mission_detail_certification_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택가능"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/tv_mission_detail_certification_day_title"
        app:layout_constraintStart_toStartOf="@+id/tv_mission_detail_certification_count"
        app:layout_constraintTop_toTopOf="@+id/tv_mission_detail_certification_open_title" />
</androidx.constraintlayout.widget.ConstraintLayout>