<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.SignupActivity">

    <EditText
        android:id="@+id/et_sign_up_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login_signin_id_hint"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_sign_up_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/sign_in_name"
        app:layout_constraintTop_toBottomOf="@id/et_sign_up_id" />

    <EditText
        android:id="@+id/et_sign_up_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/sign_in_nickname"
        app:layout_constraintTop_toBottomOf="@id/et_sign_up_name" />

    <EditText
        android:id="@+id/et_sign_up_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/sign_in_password"
        app:layout_constraintTop_toBottomOf="@id/et_sign_up_nickname" />

    <EditText
        android:id="@+id/et_sign_up_password_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/sign_in_check_password"
        app:layout_constraintTop_toBottomOf="@id/et_sign_up_password" />

    <Button
        android:id="@+id/bt_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_button_green"
        android:text="@string/sign_in"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/et_sign_up_password_check" />


</androidx.constraintlayout.widget.ConstraintLayout>