<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_campaign"
    android:paddingStart="16dp"
    android:paddingTop="19dp"
    android:paddingBottom="38dp"
    app:layout_constraintBottom_toBottomOf="parent">

    <TextView
        android:id="@+id/tv_home_mission"
        style="@style/home_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_personal_mission_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:src="@drawable/ic_arrow"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_mission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_home_mission" />

</androidx.constraintlayout.widget.ConstraintLayout>