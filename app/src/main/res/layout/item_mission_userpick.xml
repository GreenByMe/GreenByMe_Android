<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp">

        <RelativeLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_mission_userpick_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="16sp"
                android:textColor="@color/black"
                android:id="@+id/tv_mission_userpick_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_mission_userpick_icon"
                android:text="title" />

            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:id="@+id/tv_mission_userpick_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_mission_userpick_title"
                android:layout_toRightOf="@id/img_mission_userpick_icon"
                android:text="contents" />

            <Button
                android:id="@+id/bt_mission_userpick_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="참여하기" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>